# Here are some settings that could help you customize the program.
# All of them are optional. Change the file to your wishes and desires,
# then put the file into your $XDG_CONFIG_HOME/fontdiff/ directory.

# Where temporary images generated by the program will be stored.
temp_dir = "/tmp/fontdiff/images"

# Characters that should appear in the atlas – useful for quick tests.
chars = "FCKGRN"

# Size (in pixels) of each glyph rendered inside a cell.
font_size = 100

# Y‑offset from the top of a cell to the baseline of the character.
base_line = 110

# Default size of a square cell.
cell_size = 200

# Or specific width and height for each cell in the grid.
cell_width = 100
cell_height = 150

# Number of rows and columns in the resulting image. If omitted,
# the program will compute a balanced layout.
rows = 2
cols = 3

# Visual styling options, just use values accepted by Pillow’s color parser.
cell_background_color = "rgb(0, 0, 0)"  # Background colour of each cell.
baseline_color        = "#0033c088"     # Colour of the baseline line.
grid_color            = "grey"          # Colour of the grid separates cells.
a_color               = "#ff3333"       # Color of the first font
b_color               = "#33ff33"       # Color of the second font
overlap_color         = "white"         # Color of the fonts overlap


# Your own aliases for character set, you can use on the command line with `+<name>`.
[charsets]
umlauts = 'ÄäÖöÜü'    # Example of a more exotic character set.
latin   = "abcdefg"   # You can override build-in character sets.


